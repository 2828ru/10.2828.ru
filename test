<body>
	<div class="container">
	<h1>üõí –í–∞—à–∞ –∫–æ—Ä–∑–∏–Ω–∞</h1>

	<!-- –ü—Ä–æ–¥—É–∫—Ç—ã -->
	<div class="products">
		<div class="product">
		<img src="https://via.placeholder.com/220x160?text=–¢–æ–≤–∞—Ä+1" alt="–¢–æ–≤–∞—Ä 1" />
		<div class="product-info">
			<h3>–ù–∞—É—à–Ω–∏–∫–∏</h3>
			<div class="price">1 500 ‚ÇΩ</div>
			<button class="btn add-to-cart" data-id="1" data-name="–ù–∞—É—à–Ω–∏–∫–∏" data-price="1500">–í –∫–æ—Ä–∑–∏–Ω—É</button>
		</div>
		</div>

		<div class="product">
		<img src="https://via.placeholder.com/220x160?text=–¢–æ–≤–∞—Ä+2" alt="–¢–æ–≤–∞—Ä 2" />
		<div class="product-info">
			<h3>–ß–∞—Å—ã</h3>
			<div class="price">3 200 ‚ÇΩ</div>
			<button class="btn add-to-cart" data-id="2" data-name="–ß–∞—Å—ã" data-price="3200">–í –∫–æ—Ä–∑–∏–Ω—É</button>
		</div>
		</div>

		<div class="product">
		<img src="https://via.placeholder.com/220x160?text=–¢–æ–≤–∞—Ä+3" alt="–¢–æ–≤–∞—Ä 3" />
		<div class="product-info">
			<h3>–§–ª–µ—à–∫–∞</h3>
			<div class="price">800 ‚ÇΩ</div>
			<button class="btn add-to-cart" data-id="3" data-name="–§–ª–µ—à–∫–∞" data-price="800">–í –∫–æ—Ä–∑–∏–Ω—É</button>
		</div>
		</div>
	</div>

	<!-- –ö–æ—Ä–∑–∏–Ω–∞ -->
	<div class="cart">
		<h2>–ö–æ—Ä–∑–∏–Ω–∞</h2>
		<div class="cart-items">
		<!-- –¢–æ–≤–∞—Ä—ã –±—É–¥—É—Ç –¥–æ–±–∞–≤–ª—è—Ç—å—Å—è —Å—é–¥–∞ -->
		<div class="empty-message">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</div>
		</div>
		<div class="cart-total">–ò—Ç–æ–≥–æ: <span id="total-price">0 ‚ÇΩ</span></div>
		<button class="btn btn-clear" id="clear-cart">–û—á–∏—Å—Ç–∏—Ç—å –∫–æ—Ä–∑–∏–Ω—É</button>
	</div>
	</div>

	<script>
	// –ö–æ—Ä–∑–∏–Ω–∞
	let cart = [];

	// DOM —ç–ª–µ–º–µ–Ω—Ç—ã
	const cartItemsEl = document.querySelector('.cart-items');
	const totalPriceEl = document.getElementById('total-price');
	const clearCartBtn = document.getElementById('clear-cart');

	// –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –∫–æ—Ä–∑–∏–Ω—É
	document.querySelectorAll('.add-to-cart').forEach(button => {
		button.addEventListener('click', () => {
		const id = button.dataset.id;
		const name = button.dataset.name;
		const price = parseInt(button.dataset.price);

		// –ü—Ä–æ–≤–µ—Ä–∫–∞, –µ—Å—Ç—å –ª–∏ —Ç–æ–≤–∞—Ä —É–∂–µ –≤ –∫–æ—Ä–∑–∏–Ω–µ
		const existing = cart.find(item => item.id === id);
		if (existing) {
			alert(`${name} —É–∂–µ –≤ –∫–æ—Ä–∑–∏–Ω–µ!`);
			return;
		}

		// –î–æ–±–∞–≤–ª—è–µ–º —Ç–æ–≤–∞—Ä
		cart.push({ id, name, price });
		updateCart();
		animateAdd(id);
		});
	});

	// –û—á–∏—Å—Ç–∫–∞ –∫–æ—Ä–∑–∏–Ω—ã
	clearCartBtn.addEventListener('click', () => {
		if (cart.length === 0) return;
		cart = [];
		updateCart();
	});

	// –£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
	function removeFromCart(id) {
		const itemEl = document.querySelector(`[data-item-id="${id}"]`);
		itemEl.classList.add('removing');

		// –£–¥–∞–ª—è–µ–º –∏–∑ –º–∞—Å—Å–∏–≤–∞ –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
		setTimeout(() => {
		cart = cart.filter(item => item.id !== id);
		updateCart();
		}, 400);
	}

	// –ê–Ω–∏–º–∞—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è
	function animateAdd(id) {
		const itemEl = document.querySelector(`[data-item-id="${id}"]`);
		if (itemEl) {
		itemEl.style.animation = 'none';
		setTimeout(() => {
			itemEl.style.animation = 'slideIn 0.4s forwards';
		}, 10);
		}
	}

	// –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –∫–æ—Ä–∑–∏–Ω—ã
	function updateCart() {
		// –û–±–Ω–æ–≤–ª—è–µ–º —Å—É–º–º—É
		const total = cart.reduce((sum, item) => sum + item.price, 0);
		totalPriceEl.textContent = `${total} ‚ÇΩ`;

		// –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤
		if (cart.length === 0) {
		cartItemsEl.innerHTML = '<div class="empty-message">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</div>';
		return;
		}

		cartItemsEl.innerHTML = '';
		cart.forEach(item => {
		const itemEl = document.createElement('div');
		itemEl.classList.add('cart-item');
		itemEl.setAttribute('data-item-id', item.id);
		itemEl.innerHTML = `
			<div class="cart-item-info">
			<strong>${item.name}</strong>
			<span>${item.price} ‚ÇΩ</span>
			</div>
			<button class="cart-item-remove" onclick="removeFromCart('${item.id}')">√ó</button>
		`;
		cartItemsEl.appendChild(itemEl);
		});
	}
	</script>
